<p id="notice"><%= notice %></p>

<h1>List of items</h1>
<%= link_to 'New item', newitem_path %>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Prix</th>
      <th>Poster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.image_url %></td>
        <td><%= link_to 'Show', product_path(:id => item.id) %></td>
        <td><%= link_to 'Edit', edit_path(:id => item.id) %></td>
        <td><%= link_to 'Destroy', destroyitem_path(item.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table style="width:30%">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th>Prix</th>
      <th></th>
      <th>Email</th>
      <th></th>
      <th>Order ID</th>
      <th colspan="5"></th>
    </tr>
  </thead>

<h1>List of orders</h1>
<tbody>
  <%@orders.each do |order|%>
  <tr>
    <td>
      <p>
        <%order.items.each do |item|%>
        <%=item.title%> /
        <%end%>
    </td>
    <td></td>
    <td><%=order.total_price.round(2)%></td>
    <td></td>
    <td><%=order.user.email%></td>
    <td></td>
    <td><%=order.id%></td>
  </tr>
  <%end%>
</tbody>
</table>
