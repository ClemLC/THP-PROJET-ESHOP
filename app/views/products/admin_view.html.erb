<p id="notice"><%= notice %></p>

<h1>items</h1>
<%= link_to 'New item', newitem_path %>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Prix</th>
      <th>Poster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.image_url %></td>
        <td><%= link_to 'Show', product_path(:id => item.id) %></td>
        <td><%= link_to 'Edit', edit_path(:id => item.id) %></td>
        <td><%= link_to 'Destroy', destroyitem_path(item.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
